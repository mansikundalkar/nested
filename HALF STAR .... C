#include<stdio.h>
int main()
{
int n;
scanf("%d",&n);
	for(int i=1;i<=n;i++)
	{
		for(int j=1;j<=n-i;j++)
		{
			printf("  ");
			}
				for(int j=1;j<=i;j++)
				{
					printf("*");
					}
					printf("\n");
					}
int p=n-1;
	for(int p=n;p>=1;p--)
	{
		for(int j=1;j<=n-p;j++)
		{
			printf("  ");
			}
				for(int j=1;j<=p;j++)
				{
						printf("*");
					}
					printf("\n");
					}
					return 0;
					}				
